<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    tools:context="com.iviewlabs.kotlinsample.activity.HomeActivity">

    <TextView
        android:id="@+id/text_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:drawableTop="@drawable/ic_share"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/share"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/logo_home"
        android:layout_width="@dimen/home_logo_width"
        android:layout_height="@dimen/home_logo_height"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:paddingTop="10dp"
        android:src="@drawable/logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/logo_home"
        android:gravity="center"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/circle_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/image_deaf_home"
            android:layout_marginTop="61dp"
            android:background="@drawable/shape_circle"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/circle_image_size"
                android:layout_height="@dimen/circle_image_size"
                android:src="@drawable/image_news" />

            <TextView
                android:id="@+id/text_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/news"
                android:textColor="@android:color/white"
                android:textSize="@dimen/circle_text_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/circle_deaf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_circle"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="2dp">

            <ImageView
                android:layout_width="@dimen/circle_image_size"
                android:layout_height="@dimen/circle_image_size"
                android:src="@drawable/image_deaf" />

            <TextView
                android:id="@+id/text_deaf"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-6dp"
                android:ellipsize="end"
                android:gravity="center"
                android:text="@string/content_for_deaf"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textsize_14" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/circle_events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/image_deaf_home"
            android:layout_alignTop="@+id/circle_news"
            android:background="@drawable/shape_circle"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/circle_image_size"
                android:layout_height="@dimen/circle_image_size"
                android:src="@drawable/image_events" />

            <TextView
                android:id="@+id/text_events"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/events"
                android:textColor="@android:color/white"
                android:textSize="@dimen/circle_text_size" />

        </LinearLayout>

        <ImageView
            android:id="@+id/image_deaf_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/circle_deaf"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:src="@drawable/home_320_240" />

        <LinearLayout
            android:id="@+id/circle_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_deaf_home"
            android:layout_marginStart="130dp"
            android:background="@drawable/shape_small_circle"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/small_circle_image_size"
                android:layout_height="@dimen/small_circle_image_size"
                android:src="@drawable/image_info" />

            <TextView
                android:id="@+id/text_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about"
                android:textColor="@android:color/white"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/circle_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_deaf_home"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="125dp"
            android:layout_marginBottom="-10dp"
            android:background="@drawable/shape_small_circle"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_contact"
                android:layout_width="@dimen/small_circle_image_size"
                android:layout_height="@dimen/small_circle_image_size"
                android:src="@drawable/image_contactus" />

            <TextView
                android:id="@+id/text_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/image_contact"
                android:layout_alignLeft="@id/image_contact"
                android:layout_alignRight="@id/image_contact"
                android:layout_alignTop="@id/image_contact"
                android:text="@string/contact"
                android:textColor="@android:color/white"
                android:textSize="10dp" />

        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/text_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:text="@string/text_footer"
        android:textColor="@android:color/white"
        android:textSize="8dp" />

</RelativeLayout>